<style>
/* Apple System 1 inspired styling */

.gallery-card {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #ffffff;
  border: 3px solid #000000;
  border-radius: 0;
  box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.3);
  font-family: "Chicago", "Monaco", monospace;
  transition: transform 0.1s ease, box-shadow 0.1s ease;
}

.gallery-card:hover {
  transform: translate(-1px, -1px);
  box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.3);
}

.gallery-card .card-img-top {
  object-fit: contain;
  object-position: center;
  width: 100%;
  max-height: 250px;
  background-color: #ffffff;
  border-bottom: 2px solid #000000;
  padding: 8px;
  box-sizing: border-box;
}

.gallery-card.span-2-cols .card-img-top {
  max-height: 280px;
}

.gallery-card.span-2-rows .card-img-top {
  max-height: 320px;
}

.gallery-card.span-both .card-img-top {
  max-height: 380px;
}

.gallery-card .card-header {
  background: linear-gradient(90deg, #000000 50%, transparent 50%), linear-gradient(90deg, #000000 50%, transparent 50%);
  background-size: 2px 2px, 2px 2px;
  background-position: 0 0, 1px 1px;
  color: #ffffff;
  padding: 2px 4px !important;
  border: 0;
  border-bottom: 2px solid #000000;
  min-height: 18px;
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 13px;
}

.gallery-card .card-header .card-text {
  color: #ffffff;
  font-size: 13px;
}

.gallery-card .card-header a {
  color: #ffffff;
  text-decoration: underline;
}

.gallery-card .card-body {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  padding: 4px;
  font-size: 13px;
  line-height: 1.4;
}

.gallery-card .card-text {
  flex-grow: 1;
  word-break: break-word;
  overflow-wrap: break-word;
  hyphens: auto;
  -webkit-hyphens: auto;
  -ms-hyphens: auto;
  font-size: 12px;
}

.gallery-card .listing-description {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: var(--lines-clamp, 3);
  line-clamp: var(--lines-clamp, 3);
  overflow: hidden;
  margin-bottom: 4px;
}

.gallery-card.span-2-cols .listing-description {
  --lines-clamp: 5;
}

.gallery-card.span-2-rows .listing-description {
  --lines-clamp: 6;
}

.gallery-card.span-both .listing-description {
  --lines-clamp: 8;
}

.gallery-card .listing-categories {
  display: flex;
  flex-wrap: wrap;
  gap: 2px;
  margin-top: auto;
}

.gallery-card .listing-category {
  background-color: #000000 !important;
  color: #ffffff !important;
  font-size: 11px !important;
  padding: 1px 3px !important;
  border: 1px solid #000000;
  border-radius: 0 !important;
  font-weight: bold;
}

.gallery-card .card-footer {
  border-top: 2px solid #000000;
  padding: 2px 4px !important;
  font-size: 12px;
  background-color: #f0f0f0;
}

.gallery-card .card-footer .listing-author,
.gallery-card .card-footer .listing-date {
  margin-right: 6px;
}

/* Mobile responsive: 1 column layout */
@media (max-width: 768px) {
  .list.grid {
    grid-template-columns: 1fr !important;
  }
  
  .gallery-card[style*="grid-column: span 2"] {
    grid-column: 1 !important;
  }
  
  .gallery-card[style*="grid-row: span 2"] {
    grid-row: auto !important;
  }
}
</style>

<div class="list grid" style="grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); column-gap: 1.5rem; row-gap: 1.5rem; grid-auto-flow: dense;">

<% for (let i = 0; i < items.length; i++) { 
  const item = items[i];
  // Extract first image from content if no image field exists
  let imageUrl = item.image;
  if (!imageUrl && item.description) {
    const imgMatch = item.description.match(/!\[.*?\]\((.*?)\)/);
    if (imgMatch) {
      imageUrl = imgMatch[1];
    }
  }
  
  // Create mosaic pattern: first item is always wide, then: every 5th item is wide, every 7th is tall, every 11th is both
  let gridStyle = '';
  let cardClass = 'gallery-card';
  if (i === 0) {
    // Latest post (first) always spans 2 columns for maximum width
    gridStyle = 'grid-column: span 2;';
    cardClass += ' span-2-cols';
  } else if ((i + 1) % 11 === 0) {
    gridStyle = 'grid-column: span 2; grid-row: span 2;';
    cardClass += ' span-both';
  } else if ((i + 1) % 7 === 0) {
    gridStyle = 'grid-row: span 2;';
    cardClass += ' span-2-rows';
  } else if ((i + 1) % 5 === 0) {
    gridStyle = 'grid-column: span 2;';
    cardClass += ' span-2-cols';
  }
%>
  <div class="card border-2 rounded-3 mb-3 <%= cardClass %>" style="<%= gridStyle %>" data-date="<%= item.date %>" <%= metadataAttrs(item) %>>
    <% if (imageUrl) { %>
    <a href="<%- item.path %>">
      <img src="<%- imageUrl %>" alt="<%- item.title %>" class="card-img-top"/>
    </a>
    <% } %>
    
    <div class="card-header py-1 px-2 border-bottom border-1 bg-light">
      <small class="card-text">
        <a href="<%- item.path %>" class="listing-title"><%= item.title %></a>
        <% if (item.subtitle) { %>
        <span class="text-muted listing-subtitle d-block"><%= item.subtitle %></span>
        <% } %>
      </small>
    </div>
    
    <div class="card-body">
      <% if (item.description) { %>
      <p class="card-text listing-description"><%= item.description %></p>
      <% } %>
      
      <% if (item.categories && item.categories.length > 0) { %>
      <div class="listing-categories">
        <% for (const category of item.categories) { %>
        <span class="listing-category badge bg-secondary"><%= category %></span>
        <% } %>
      </div>
      <% } %>
    </div>
    
    <div class="card-footer text-muted py-1 px-2 small">
      <% if (item.author) { %>
      <span class="listing-author"><%= item.author %></span>
      <% } %>
      <% if (item.date) { %>
      <span class="listing-date"><%= item.date %></span>
      <% } %>
    </div>
  </div>
<% } %>

</div>
